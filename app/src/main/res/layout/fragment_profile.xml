<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:background="@drawable/background"
    >

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBody"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader">

        <Button
            android:id="@+id/buttonPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meine Angaben" />

        <Button
            android:id="@+id/buttonDogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meine Hunde" />

        <Button
            android:id="@+id/buttonProfil3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premium" />

        <Button
            android:id="@+id/buttonProfil4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Einstellungen" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:text="" />

        <Button
            android:id="@+id/AbmeldenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abmelden" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>